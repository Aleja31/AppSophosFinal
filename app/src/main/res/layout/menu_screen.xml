<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="527dp"
        android:layout_height="280dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/corporative_image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/montserratregular"
        android:text="Bienvenido"
        android:textAlignment="textStart"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="146dp"
        android:layout_height="75dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="Estas son las opciones que tenemos para ti"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <View
        android:id="@+id/sendDocuments"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_border_pink"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"></View>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="143dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/document_icon"
        android:drawablePadding="3dp"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="Enviar documentos"
        android:textColor="@color/pink"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/sendDocuments"
        app:layout_constraintTop_toTopOf="@+id/sendDocuments" />

    <Button
        android:id="@+id/buttonDocuments"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button_pink"
        android:drawableRight="@drawable/arrow_right_alt"
        android:fontFamily="@font/montserratregular"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:text="Ingresar"
        android:textAllCaps="false"
        android:textColor="@color/pink"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/sendDocuments"
        app:layout_constraintEnd_toEndOf="@+id/sendDocuments"
        tools:ignore="TouchTargetSizeCheck" />

    <View
        android:id="@+id/viewDocuments"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/style_border_blue"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sendDocuments">

    </View>

    <Button
        android:id="@+id/buttonViewDocuments"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/selector_button_blue"
        android:drawableRight="@drawable/arrow_right_alt_blue"
        android:fontFamily="@font/montserratregular"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:text="Ingresar"
        android:textAllCaps="false"
        android:textColor="@color/blue"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewDocuments"
        app:layout_constraintEnd_toEndOf="@+id/viewDocuments"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/search_icon"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="Ver documentos"
        android:textColor="@color/blue"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/viewDocuments"
        app:layout_constraintTop_toBottomOf="@+id/sendDocuments" />

    <View
        android:id="@+id/office"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/style_border_green"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewDocuments">

    </View>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="85dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/location_icon"
        android:fontFamily="@font/montserratregular"
        android:gravity="center"
        android:text="Oficinas"
        android:textColor="@color/green"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/office"
        app:layout_constraintTop_toTopOf="@+id/office" />

    <Button
        android:id="@+id/buttonLocation"
        android:layout_width="110dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="12dp"
        android:accessibilityLiveRegion="none"
        android:background="@drawable/selector_button_green"
        android:drawableRight="@drawable/arrow_right_alt_green"
        android:fontFamily="@font/montserratregular"
        android:paddingStart="15dp"
        android:paddingEnd="25dp"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/green"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/office"
        app:layout_constraintEnd_toEndOf="@+id/office"
        tools:ignore="TouchTargetSizeCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>


