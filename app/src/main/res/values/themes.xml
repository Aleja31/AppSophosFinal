<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App_Sophos" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
<!--        <item name="colorOnSecondary">@color/black</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/CustomToollBarStyle</item>
        <item name="android:textColor">@color/purple_Main</item>
        <item name="colorControlNormal">@color/purple_Main</item>

    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:tint">@color/green</item>
    </style>

    <style name="CustomToollBarStyle" parent="Widget.AppCompat.Toolbar">

        <item name="android:background">@color/white</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
        <item name="subtitleTextAppearance">@style/CustomSubTitleTextAppearance</item>

    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple_Main</item>
        <item name="android:homeAsUpIndicator">@color/purple_Main</item>

    </style>

    <style name="CustomSubTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/purple_Main</item>
    </style>

    <style name="Theme.App_Sophos.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.App_Sophos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColor">@color/purple_Main</item>
        <item name="android:homeAsUpIndicator">@color/purple_Main</item>
    </style>

    <style name="Theme.App_Sophos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>